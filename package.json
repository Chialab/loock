{
  "name": "@chialab/loock",
  "version": "3.0.0",
  "description": "A focus trap helper for keyboard navigation on the web.",
  "type": "module",
  "types": "types/index.d.ts",
  "lib": "src/index.js",
  "main": "dist/cjs/loock.js",
  "module": "dist/esm/loock.js",
  "browser": "dist/iife/loock.js",
  "exports": {
    "require": "./dist/cjs/loock.js",
    "default": "./dist/esm/loock.js"
  },
  "files": [
    "dist",
    "types",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "author": "Chialab <dev@chialab.io> (https://www.chialab.it)",
  "repository": {
    "type": "git",
    "url": "git@github.com:chialab/loock.git"
  },
  "homepage": "https://www.chialab.io/p/loock",
  "bugs": {
    "url": "https://github.com/chialab/loock/issues",
    "email": "dev@chialab.io"
  },
  "devDependencies": {
    "@chialab/eslint-config": "^2.3.0",
    "@chialab/rna": "^0.5.7",
    "@open-wc/testing": "^2.5.33",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/user-event": "^13.1.8",
    "eslint": "^7.25.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "npm run types && rimraf dist && npm run build:esm && npm run build:cjs && npm run build:iife",
    "build:esm": "rna build src/index.js --output dist/esm/loock.js --format esm --minify",
    "build:cjs": "rna build src/index.js --output dist/cjs/loock.js --format cjs --minify",
    "build:iife": "rna build src/index.js --output dist/iife/loock.js --format iife --minify --target es6 --bundle",
    "types": "rimraf types && tsc --declaration --emitDeclarationOnly --declarationDir 'types'",
    "test": "rna test 'test/*.tests.js' --coverage",
    "lint": "eslint src",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@chialab/dna": "^3.3.0"
  }
}
